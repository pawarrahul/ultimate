<%= form_for @user do |f| %>
    <%= f.label value ="Name" %>
    <%= f.text_field :name %><br><br>
    <%= f.label value ="email" %>
    <%= f.text_field :email %><br><br>
    <%= f.label value ="password" %>
    <%= f.password_field :password %><br><br>
    <%= f.label value ="Re-Enter Password" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Create Account" %>
 <% end %>